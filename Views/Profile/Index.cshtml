@model Profile

<div class="form-group">

    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-danger">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z" />
            <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z" />
        </svg>  Back to Home
    </a>
</div>

<div class="row">
   
        <div class="col-5">
            <p class="display-4">Customer's Info</p>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@Model.User.FullName</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@Model.User.Email</h6>
                    <span class="lead">Address: <span class="lead font-italic">@Model.User.Address</span></span>
                </div>
            </div>
        </div>

        <div class="col-7">
            <p class="display-4">Customer's Past Orders</p>
            @if (Model.Orders != null)
            {
                @foreach (var order in Model.Orders)
                {
                    <h5 class="lead">OrderId: @order.OrderId <span class="badge badge-primary">Total: <span class="badge badge-light">$@order.Total</span></span></h5>
                    <h5 class="pt-2">Order was paid at: @order.FinishedAt</h5>
                    <hr class="m-0 pt-2 mt-2">
                }
            } else {
                <p class="lead">You haven't purchased anything yet</p>
            }
        
        </div>
    
  
</div>     
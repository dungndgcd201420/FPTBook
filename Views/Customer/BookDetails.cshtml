@model Book

<style>
    .right-side-pro-detail span {
        font-size: 15px;
    }

    .right-side-pro-detail .price-pro {
        color: #E45641;
    }

    .right-side-pro-detail .tag-section {
        font-size: 18px;
        color: #5D4C46;
    }
</style>

<div class="form-group">
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-danger">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z" />
            <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z" />
        </svg>  Back to Books List
    </a>
</div>

<div class="container">
    <div class="col-lg-12 border p-3 main-section bg-white">
        <div class="row m-0">
            <div class="col-lg-4 left-side-product-box pb-3">
                <img class="card-img-top" src="@ViewBag.ImageData" alt="Card Image" />
            </div>
            <div class="col-lg-8">
                <div class="right-side-pro-detail border p-3 m-0">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="d-flex justify-content-between">
                                <div>Title</div>
                                @if (Model.BookStatus == FPTBook.Enums.BookStatus.inStock)
                                {
                                    <div class="bg-info" style="border-radius:4px; width:60px; height:20px;">
                                        <p class="text-white mb-0 small font-weight-bold" style="text-align:center;"> In Stock</p>
                                    </div>
                                }
                                else
                                {
                                    <div class="bg-danger" style="border-radius: 4px; width:90px; height:20px;">
                                        <p class="text-white mb-0 small font-weight-bold" style="text-align:center;"> Out Of Stock</p>
                                    </div>
                                }

                            </div>
                            <p class="m-0 p-0 lead" style="font-size: 50px;">@Model.Title</p>
                        </div>
                        <div class="col-lg-12">
                            <p class="m-0 p-0 price-pro" style="font-size: 26px">$ @Model.Price</p>
                            <hr class="p-0 m-0">
                        </div>
                        <div class="col-lg-12 pt-2">
                            <h5 class="font-italic">by @Model.Author</h5>
                            <hr class="m-0 pt-2 mt-2">
                        </div>
                        <div class="col-lg-12 pt-2">
                            <h5 class="font-italic lead">@Model.Genre.Description</h5>
                            <hr class="m-0 pt-2 mt-2">
                        </div>
                        <div class="col-lg-12 mt-3">
                            <div class="row">
                                <div class="col-lg-6 pb-2">
                                    <a asp-controller="Customer" asp-action="AddToCart" asp-route-id=@Model.BookId class="btn btn-warning">Add to Cart</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


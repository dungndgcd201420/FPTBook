@{
}

@using Microsoft.AspNetCore.Identity
@using FPTBook.ViewModels
@model IEnumerable<ApplicationUser>

<div class="form-group">
  <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-danger">
    Back to Index
  </a>
</div>

<h1 class="display-1 text-center">All Customers</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Customer's Email</th>
      <th scope="col">Customer's Full Name</th>
      <th scope="col">Customer's Address</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model){
      <tr>
        <th scope="row">@item.Id</th>
        <td>@item.Email</td>
        <td>@item.FullName</td>
        <td>@item.Address</td>
        <td><a asp-action="ChangeCustomerPassword" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-danger">Change Password</a></td>
      </tr>
  }
  </tbody>
</table>
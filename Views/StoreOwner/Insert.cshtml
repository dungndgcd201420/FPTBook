@using FPTBook.ViewModels
@model BookGenreViewModel

<style>
    input {
        width: 100%;
        display: inline-block;
        border-radius: 4px;
        border: 1px solid #808080;
        border-left: 6px solid #0B5ED7;
        transition: 0.5s;
    }

    input:focus {
        border: 3px solid #0B5ED7;
    }

    input:hover {
        background-color: rgb(200, 225, 247);
    }

    label {
        border: none;
    }

    input[type=submit] {
        cursor: pointer;
        width: 100%;
        transition: 0.3s;
    }
</style>

<div class="form-group">
  <a asp-controller="StoreOwner" asp-action="Index" class="btn btn-outline-danger">
    Back to Index
  </a>
</div>

<h1 class="display-1 text-center">Insert a new Book </h1>


<form enctype="multipart/form-data" asp-controller="StoreOwner" asp-action="Insert" method="post">
  <div class="form-group">
        <label>Title</label>
        <input asp-for="Book.Title" class="form-control" placeholder="Book Title" />
        <span asp-validation-for="Book.Title" class="text-danger"></span>

        <label>Author</label>
        <input asp-for="Book.Author" class="form-control" placeholder="Book Author" />
        <span asp-validation-for="Book.Author" class="text-danger"></span>

        <label>Price</label>
        <input asp-for="Book.Price" class="form-control" placeholder="Book Price" />
        <span asp-validation-for="Book.Price" class="text-danger"></span>

    <div class="form-group">
        <label>Genre</label>
            <select asp-for="Book.GenreId"
                    asp-items="@(new SelectList(Model.Genres, "Id", "Description"))"
                    class="form-control">
            </select>
    </div>
        <div class="form-group">
            <dl>
                <dt>
                    <label asp-for="@Model.FormFile"></label>
                </dt>
                <dd>
                    <input asp-for="@Model.FormFile" type="file">
                </dd>
            </dl>
        </div>
  </div>
<div class="form-group">
    <button type="submit" class="btn btn-primary">Insert</button>
    </div>
</form>
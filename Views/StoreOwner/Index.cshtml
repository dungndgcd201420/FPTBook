@model IEnumerable<Book>
<h1 class="text-center display-2">Index of Book</h1>

<div class="d-flex justify-content-center">
    <div class="m-2">
        <a asp-controller="StoreOwner"
           asp-action="Insert" class="btn btn-primary">Create new Book</a>
    </div>

    <div class="m-2">
        <a asp-controller="StoreOwner"
           asp-action="GenreList" class="btn btn-primary">List of genres</a>
    </div>

    <div class="m-2">
        <a asp-controller="StoreOwner"
           asp-action="Records" class="btn btn-primary">Purchased Records</a>
    </div>
</div>


<div class="d-flex justify-content-end">
    <form>
        <input type="text" name="genre" placeholder="Search by Genre" />
        <button type="submit" class="btn btn-outline-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
            </svg>  Search
        </button>
    </form>
</div>


<table class="table">
    <thead>
    <th scope="col">ID</th>
    <th scope="col">Title</th>
    <th scope="col">Author</th>
    <th scope="col">Status</th>
    <th scope="col">Genre</th>
    <th scope="col">Actions</th>
    <th scope="col"></th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.BookId</th>
                <td>@item.Title</td>
                <td>@item.Author</td>

                @if (item.BookStatus == FPTBook.Enums.BookStatus.inStock)
                {
                    <td class="text-info font-weight-bold">In Stock</td>
                }
                else
                {
                    <td class="text-danger font-weight-bold">Out Of Stock</td>
                }

                <td>@item.Genre.Description</td>
                <td>
                    <a asp-controller="StoreOwner"
                   asp-action="Details" class="btn btn-primary" asp-route-id=@item.BookId>Details</a>
                    <a asp-controller="StoreOwner"
                   asp-action="Update" class="btn btn-outline-primary" asp-route-id=@item.BookId>Update</a>
                    <a asp-controller="StoreOwner"
                   asp-action="Delete" class="btn btn-danger" asp-route-id=@item.BookId>Delete</a>
                </td>
            </tr>


        }
    </tbody>
</table>
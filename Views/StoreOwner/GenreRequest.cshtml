@using FPTBook.Enums
@model Genre

<div class="form-group">
    <a asp-controller="StoreOwner" asp-action="GenreList" class="btn btn-outline-danger">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z" />
            <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z" />
        </svg>  Back to Genres List
    </a>
</div>

<h3 class="display-3 text-center">Send a new genre request to Admin</h3>

<input type="reset" class="btn btn-outline-danger" value="Clear Form" />

<form asp-controller="StoreOwner" asp-action="GenreRequest" method="post">
    <div class="form-group">
        <label hidden>Id</label>
        <input asp-for="Id" class="form-control" placeholder="Id" hidden/>
    </div>

    <div class="form-group">
        <label>Description</label>
        <input asp-for="Description" class="form-control" placeholder="Description" />
    </div>

    <div class="form-group">
        <label>Status</label>
        <input asp-for="Status" class="form-control" placeholder="Pending" disabled/>
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-outline-primary">Send Request</button>
    </div>
</form>

@model IEnumerable<Genre>

<div class="form-group">
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-danger">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z" />
            <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z" />
        </svg>  Back to Home
    </a>
</div>

<h1 class="display-2 text-center">List of Genres</h1>

<div class="d-flex justify-content-center">
    <div class="m-2">
        <a asp-controller="StoreOwner" asp-action="GenreRequest" class="btn btn-primary text-center">Request a new genre</a>
    </div>
</div>

<table class="table">
    <thead>
        <th scope="col">ID</th>
        <th scope="col">Description</th>
        <th scope="col">Status</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Description</td>
                @if ((int)item.Status == 0){<td class="text-success text-uppercase">@item.Status</td>}
                else @if ((int)item.Status == 1){<td class="text-primary text-uppercase">@item.Status</td>}
                else {<td class="text-danger text-uppercase">@item.Status</td>}
                    
            </tr>
        }
    </tbody>
</table>

@{
}

@model IEnumerable<Genre>

<div class="form-group">
    <a asp-controller="StoreOwner" asp-action="Index" class="btn btn-outline-danger">
        Back to Index
    </a>
</div>

<h1 class="display-2 text-center">List of Genres</h1>
<a asp-controller="StoreOwner" asp-action="GenreRequest" class="btn btn-primary text-center">Request a new genre</a>


<table class="table">
    <thead>
        <th scope="col">ID</th>
        <th scope="col">Description</th>
        <th scope="col">Status</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Description</td>
                @if ((int)item.Status == 0){<td class="text-success text-uppercase">@item.Status</td>}
                else @if ((int)item.Status == 1){<td class="text-primary text-uppercase">@item.Status</td>}
                else {<td class="text-danger text-uppercase">@item.Status</td>}
                    
            </tr>
        }
    </tbody>
</table>
